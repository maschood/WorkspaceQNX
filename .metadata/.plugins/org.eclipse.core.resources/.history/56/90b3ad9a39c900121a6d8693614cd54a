#include "Comport1.h"

Comport1::Comport1() {
	fd = open("/dev/ser1", O_RDWR); // O_NOBLOCK => nicht blockierend
	if (fd < 0) {
		perror("/dev/ser1");
		exit(-1);
	}
}

Comport1::~Comport1() {
	close(fd);
}

void Comport1::execute(void* arg) {
	char recbuf;
//	int buffer [1000];
//		void* buf = NULL;
//		buf = buffer;


	while (1) {
		readcond(fd, &recbuf, 1, 1, 0, 10);

//		for (int i = 0; i < 5; i++) {
//			cout << buffer[i] << endl;
//
//		}

	}

}

void Comport1::shutdown() {

}

