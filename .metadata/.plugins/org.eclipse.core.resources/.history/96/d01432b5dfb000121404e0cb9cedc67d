#include "HAL_ISR.h"

HAL_ISR::HAL_ISR() {

}

HAL_ISR::~HAL_ISR() {

}

void HAL_ISR::initInterrupt(){
	chid = ChannelCreate(0);
	if (chid == -1){
		cout<< "Fehler: Channel schon vorhanden" << endl;
	}

	coid = ConnectAttach(0, 0 , chid,_NTO_SIDE_CHANNEL , 0);

	if(coid == -1){
		cout<< "Fehler: Connect konnte nicht erfolgen" << endl;
	}




}


int HAL_ISR::getChid(){
	return chid;
}

int HAL_ISR::getCoid(){
	return coid;
}
