#include "Seriell.h"

Seriell::Seriell() {
	fd = (open(SCHNITTSTELLE1, O_RDWR));
}

Seriell::~Seriell() {

	close(fd);
}

int Seriell::sendMsg(char msg){

	return write(fd,&msg,sizeof(msg));

}

int Seriell::readMsg(char* buff){

	return readcond(fd,buff, sizeof(buff),1,0,10);

}

void Seriell::execute(void *arg){

	char buffer = 0;


	while (1){
		readMsg(buffer);

		cout<< buffer <<endl;
	}


}
