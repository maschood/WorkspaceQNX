#include "Comport1.h"

Comport1::Comport1() {
	fd = open("/dev/ser1", O_RDWR); // O_NOBLOCK => nicht blockierend
		    if (fd < 0) {
		        perror("/dev/ser1");
		        exit(-1);
		    }
}

Comport1::~Comport1() {
	 close(fd);
}

