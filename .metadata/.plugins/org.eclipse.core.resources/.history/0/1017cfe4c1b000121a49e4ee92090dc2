#ifndef HAL_ISR_H_
#define HAL_ISR_H_

class HAL_ISR {

public:

	HAL_ISR();
	virtual ~HAL_ISR();
	int getChid();
	int getCoid();
    void setChid(int chid)
    {
        this->chid = chid;
    }

    void setCoid(int coid)
    {
        this->coid = coid;
    }

private:
	void initInterrupt();
	int chid;
	int coid;
};

#endif /* HAL_ISR_H_ */
