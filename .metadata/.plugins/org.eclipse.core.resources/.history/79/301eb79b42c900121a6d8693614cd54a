#include "Comport2.h"

Comport2::Comport2() {
	fd = open("/dev/ser2", O_RDWR); // O_NOBLOCK => nicht blockierend
		if (fd < 0) {
			perror("/dev/ser2");
			exit(-1);
		}
}

Comport2::~Comport2() {
	close(fd);
}

void Comport2::execute(void* arg){
	int buffer [100];

	buffer [0] = 97;
	void* buf = NULL;
	buf = buffer;

		write( fd, buf,  1 );


}

void Comport2::shutdown(){

}
