#include <stdio.h>
#include "ChildClass.h"


namespace thread
{

	void ChildClass::setIndex(int i){
		index = i;
	}

	void ChildClass::setCount(int i){
		count = i;
	}

	void ChildClass::Ausgabe(){
		printf("Child %d count: %d",index, count);

		count++;
	}

	void ChildClass::execute(void*){
		while(isStopped() == 0){
			Ausgabe();
		}
	}
};
