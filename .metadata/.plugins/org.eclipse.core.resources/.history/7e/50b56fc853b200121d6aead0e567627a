#include <stdio.h>
#include "ChildClass.h"
namespace thread
{
	ChildClass(int i){
		index = i;
		count = 0;
	}


	void ChildClass::Ausgabe(){
		printf("Child %d count: %d",index, count);

		count++;
	}

	void ChildClass::execute(void*){
		while(isStopped() == 0){
			Ausgabe();
		}
	}
};
