#include "Seriell2.h"

Seriell2::Seriell2() {
	fd = (open(SCHNITTSTELLE2, O_RDWR));
}

Seriell2::~Seriell2() {

	close(fd);
}

int Seriell2::sendMsg(char msg){

	return write(fd,&msg,sizeof(msg));

}

int Seriell2::readMsg(char* buff){

	return readcond(fd,buff, sizeof(buff),1,0,10);

}


